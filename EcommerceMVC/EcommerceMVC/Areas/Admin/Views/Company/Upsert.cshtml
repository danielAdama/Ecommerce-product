@model Ecommerce.Infrastructure.Data.Company;

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<input asp-for="Id" hidden/>

	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="col-12 pb-2">
					<h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
					<hr />
				</div>
				<div class="mb-3">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="StreetAddress"></label>
					<textarea asp-for="StreetAddress" class="form-control"></textarea>
					<span asp-validation-for="StreetAddress" rows="3" class="text-danger"></span>
				</div>
				<div class="mb-3 col-6">
					<label asp-for="City"></label>
					<input asp-for="City" class="form-control" />
					<span asp-validation-for="City" class="text-danger"></span>
				</div>
				<div class="mb-3 col-6">
					<label asp-for="State"></label>
					<input asp-for="State" class="form-control" />
					<span asp-validation-for="State" class="text-danger"></span>
				</div>
				<div class="mb-3 col-6">
					<label asp-for="PostalCode"></label>
					<input asp-for="PostalCode" class="form-control" />
					<span asp-validation-for="PostalCode" class="text-danger"></span>
				</div>
			</div>
			<div class="col-12">
				@if (Model.Id != 0)
				{
					<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
				}
				else
				{
					<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
				}
				<a asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-secondary">Back to List</a>
			</div>
		</div>
	</div>
		
</form>

@*This is to avoid going back to server whenever we are performing validation of both Name and DisplayOrder*@
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}